{
  "name": "rent-a-car-oloo",
  "version": "1.0.0",
  "description": "Implement the business logic of a Rent a car, create an ApiRestfull connected to MongoAtlas and implement the object composition. Introduction to linked objects by prototypes of JS",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pau13-loop/Rent-a-car-OLOO-JS.git"
  },
  "author": "Pau Llinas Amat",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pau13-loop/Rent-a-car-OLOO-JS/issues"
  },
  "homepage": "https://github.com/pau13-loop/Rent-a-car-OLOO-JS#readme",
  "scripts": {
    "lint": "eslint src/*.js",
    "start": "node ./bin/www",
    "devstart": "nodemon ./bin/www",
    "serverstart": "cross-env NODE_ENV=development DEBUG=rent_a_car:* npm run devstart",
    "migrate": "node ./src/db/migrations/migration.js",
    "pretest": "cross-env NODE_ENV=test npm run migrate",
    "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles",
    "pulltest": "cross-env NODE_ENV=test jest --runInBand",
    "coverage": "jest --coverage",
    "pre-commit": "npm run lint && npm test",
    "test-vanilla": "node ./src/db/migrations/migration.js && cross-env NODE_ENV=test jest"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "debug": "^4.3.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "http-errors": "^1.8.1",
    "jade": "^0.29.0",
    "mongoose": "^6.1.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.3.0",
    "jest": "^27.4.5",
    "nodemon": "^2.0.15",
    "supertest": "^6.1.6"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}